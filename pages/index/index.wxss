.wrapper-select .item {
    display: flex;
    justify-content: flex-start;
    margin-bottom: 20rpx;
}

.wrapper-select .item .label {
    flex: 0 1 150rpx;
    width: 150rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 35rpx;
}

.wrapper-select .item .select {
    flex: 1;
}

.btnQuery {
    margin-top: 20rpx;
    margin-left: 50%;
    transform: translate3d(-50%, 0, 0);
}
.queryList .list{
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-top: 50rpx;
    padding: 20rpx;
    height: 500rpx;
}
.queryList .title {
    line-height: 30rpx;
    padding: 20rpx;
    font-size: 16px;
    font-weight: 600;
    border-bottom: 1px solid #6c8acc;
}
.queryList .list .item {
  display: flex;
}
.queryList .list .text{
    margin-right: 20rpx;
    /*background-color: red;*/
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}